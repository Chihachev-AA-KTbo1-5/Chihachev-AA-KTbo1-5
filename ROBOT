#include<iostream>
#include "cstdlib"
#include <time.h>
using namespace std;

int shag( A[2],k)
{
	

		if (k == 1)
		{
			A[1] = A[1] + 1;
		}
		if (k == 2)
		{
			A[1] = A[1] - 1;
		}
		if (k == 3)
		{
			A[0] = A[0] - 1;
		}
		if (k == 4)
		{
			A[0] = A[0] + 1;
		}
		
	
	return A[2]

}

/// /////////////////////////


int main()

{
	setlocale(LC_ALL, "Russian");
	int A[2] = { 0, 0 };

	int n; // kol-vo shagov
	cout << "Введите кол-во шагов робота  ";
	cin >> n;

	srand(time(NULL));
	for (int i = 0; i < n; i++)
	{

		int k;
		k = (rand() % 4 + 1);
	}
	
	cout << "Конечные координаты робота:  ";
	
	

		cout<<"{" << A[0]<<":"<<A[1]<<"}"<< endl;
	
		
	return 0;
	system("pause");
}
